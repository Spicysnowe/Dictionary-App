<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        >

        <ImageView
            android:id="@+id/dot"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/circular_img_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/textView_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definitions"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/dot"
            android:layout_marginLeft="10sp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/textView_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textView_definition"
            android:layout_marginTop="5sp"
            />


        <TextView
            android:id="@+id/syn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synonyms:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textView_example"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/textView_synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="italic"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_below="@id/syn"
            android:layout_marginBottom="5sp"/>

        <TextView
            android:id="@+id/ant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antonyms"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textView_synonyms"
            android:layout_marginTop="5sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textView_antonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="italic"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_below="@id/ant"
            android:layout_marginBottom="5sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>