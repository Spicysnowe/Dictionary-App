<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#678bcf"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Definations"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textView_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="8dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Synonyms"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textView_synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="italic"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antonyms"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textView_antonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textStyle="italic"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>