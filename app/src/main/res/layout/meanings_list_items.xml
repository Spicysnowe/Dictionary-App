<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/view_bg_3">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/textView_partsOfSpeech"
                android:id="@+id/recycler_definations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textView_partsOfSpeech"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Exclamatory"
                android:textSize="15sp"
                android:background="@drawable/view_bg_2"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="30sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView_pos"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Avg"
            android:textSize="15sp"
            android:background="@drawable/view_bg_2"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30sp"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>